{
    "env": {
        "browser": true,
        "es6": true
    },
    "extends": [
      "standard",
      "plugin:react/recommended",
    ],
    "parserOptions": {
        "parser": "@babel/eslint-parser",
        "ecmaVersion": 11,
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true
        }
    },
    "rules": {
        "indent": [
            "error",
            2,
            { "SwitchCase": 1 }
        ],
        // "linebreak-style": [
        //     "error",
        //     "unix"
        // ],
        "quotes": [
            "error",
            "single"
        ],
        "arrow-body-style": [
            2,
            "as-needed"
        ],
        "lines-between-class-members": ["error", "always"] ,
        "comma-dangle": "off",
        "no-confusing-arrow": 1,
        "no-use-before-define": 1,
        "prefer-template": 2
    },
}
